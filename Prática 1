//Questão 6

#include <stdio.h>

int main(){
  int x1, x2, x3, x4, mult, soma;

  printf("Digite 4 numeros inteiros:\n");
  
  scanf("%d", &x1);
  scanf("%d", &x2);
  scanf("%d", &x3);
  scanf("%d", &x4);

  mult = x1 * x3;
  soma = x2 + x4;

  printf("Multiplicação do primero pelo terceiro: %d", mult);
  printf("\nSoma do segundo com o quarto: %d", soma);

  return 0;
}

