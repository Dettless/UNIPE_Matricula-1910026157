//Questão 3

#include <stdio.h>

int main(){
  float x, y, z;

  printf("Digite suas duas notas:\n");
  scanf("%f", &x);
  scanf("%f", &y);

  z = (x + y)/2;

  printf("Sua media eh: %f", z);

return 0;
}

